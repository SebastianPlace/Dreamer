<div class="habit-card">
  {{#if isEditing}}
    <div class="form-group">
      <label for="habit-title-edit">Habit Name</label>
      {{input id="habit-title-edit" class="form-control" value=habit.title placeholder="Title"}}
    </div>
    <label>Active Days</label>
    <div class="row">
      <div class="col-md-10 col-xs-10">
        <div class="day-list">
          {{#active-day-edit habit=habit day="mon" isActive=habit.activeDays.mon}}M{{/active-day-edit}}
          {{#active-day-edit habit=habit day="tue" isActive=habit.activeDays.tue}}T{{/active-day-edit}}
          {{#active-day-edit habit=habit day="wed" isActive=habit.activeDays.wed}}W{{/active-day-edit}}
          {{#active-day-edit habit=habit day="thu" isActive=habit.activeDays.thu}}T{{/active-day-edit}}
          {{#active-day-edit habit=habit day="fri" isActive=habit.activeDays.fri}}F{{/active-day-edit}}
          {{#active-day-edit habit=habit day="sat" isActive=habit.activeDays.sat}}S{{/active-day-edit}}
          {{#active-day-edit habit=habit day="sun" isActive=habit.activeDays.sun}}S{{/active-day-edit}}
        </div>
      </div>
    </div>

    <button class="btn btn-primary" {{action "save"}}>Save</button>
    <button class="btn" {{action "cancel"}}>Cancel</button>
    <button class="btn btn-danger pull-right" {{action "delete"}}><span class="glyphicon glyphicon-trash"></span></button>

  {{else}}
    <a class="habit-link" {{action "edit"}}>{{habit.title}}</a>
    <h5>Streak: 2 Days</h5>
    <!-- <h5>Total Successful: 3 Days</h5> -->
    <h5>Logged Days: </h5>
    <div class="row day-row">
      <!-- TODO limit to 5 days -->
      {{#each habit.days as |day|}}
        <div class="col-md-2">
          {{habit-day day=day tooltipContent=day.date}}
        </div>
      {{/each}}
    </div>
    <div class="habit-log-btn-group">
      <button class="btn btn-success btn-habit-log" {{action "logDay" true}}>Done <span class="glyphicon glyphicon-ok"></span></button>
      <button class="btn btn-danger btn-habit-log" {{action "logDay" false}}>Not Done <span class="glyphicon glyphicon-remove"></span></button>
    </div>

  {{/if}}
</div>
